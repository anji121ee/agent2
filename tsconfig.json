{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "types": [
      "node"
    ],
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@modelcontextprotocol/sdk/client": [
        "./node_modules/@modelcontextprotocol/sdk/dist/esm/client/index.d.ts"
      ],
      "@modelcontextprotocol/sdk/client/*": [
        "./node_modules/@modelcontextprotocol/sdk/dist/esm/client/*.d.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}